{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*"],

  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "outDir": "dist"
  }
}
